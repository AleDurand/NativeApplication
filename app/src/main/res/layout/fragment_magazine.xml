<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/magazine_view_image"
        android:layout_marginTop="8dip"
        android:layout_marginBottom="8dip"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="16dip"
        android:layout_width="110dip"
        android:layout_height="140dip"
        android:src="@mipmap/ic_launcher" />
    <TextView
        android:id="@+id/magazine_view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/magazine_view_image"
        android:layout_toRightOf="@+id/magazine_view_image"
        android:paddingTop="15dp"
        android:text="Nombre" />
    <TextView
        android:id="@+id/magazine_view_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/magazine_view_name"
        android:layout_toRightOf="@+id/magazine_view_image"
        android:paddingTop="5dp"
        android:text="Descripcion"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

</RelativeLayout>